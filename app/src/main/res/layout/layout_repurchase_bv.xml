<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp"
    android:background="@android:color/white"
    tools:context=".ui.IncomeDetails.Repurchase_BV_Report.RepurchaseBVReportFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/RepurchaseBv_no"
                android:text="No#"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/RepurchaseBv_date"
                android:text="Date"
                android:textColor="#000000"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/RepurchaseBv_orderid"
                android:text="Product Order ID"
                android:textColor="#000000"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/RepurchaseBv_amount"
                android:text="Amount"
                android:textColor="#000000"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/RepurchaseBv_bv"
                android:text="BV"
                android:textColor="#000000"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>