<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.IncomeDetails.First_Purchase_BV_Report.FirstPurchaseBVFragment">
    <LinearLayout
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="From"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:hint="DD/MM/YYYY"
                    android:id="@+id/fromdate_firstpurchase"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:background="@drawable/searchbg"
                    android:layout_width="90dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:text="To"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:hint="DD/MM/YYYY"
                    android:id="@+id/todate_firstpurcahse"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/searchbg"
                    android:layout_width="90dp"
                    android:layout_height="30dp"/>
                <Button
                    android:id="@+id/search_btnfirstpurchase"
                    android:layout_marginLeft="5dp"
                    android:text="Search"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/ic_square"
                    android:layout_width="90dp"
                    android:layout_height="30dp"/>
            </LinearLayout>

            <RelativeLayout
                android:paddingRight="15dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/firstpurchase_search"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/searchbg"
                    app:defaultQueryHint="Search" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="No#"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Date"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Product Order ID"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Amount"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="BV"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="5dp">

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="5dp"
            android:id="@+id/recycler_firstpurchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:id="@+id/txtnodata_firstpurchase"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/firstpurchase_totallinearlayout"
            android:gravity="center_vertical|end"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:background="#EFE91E63">
            <TextView
                android:text="Total : "
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginRight="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/firstpurchase_totalamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00.00"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />
            <View
                android:layout_width="22dp"
                android:layout_height="0dp"/>

            <TextView
                android:textColor="#000000"
                android:id="@+id/firstpurchase_totalbv"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:text="00.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>