<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Dashboard.LeftTotalBV">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#DB1207"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <ImageView
                android:id="@+id/lactiveback"
                android:layout_gravity="center"
                android:src="@drawable/arrow"
                android:layout_width="40dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_gravity="center"
                android:text="Channel Partner 1 Sales"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
       <LinearLayout
           android:paddingRight="5dp"
           android:paddingLeft="5dp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <LinearLayout
                   android:gravity="center_horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:text="From"
                       android:textColor="#000000"
                       android:textSize="15sp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                   <Button
                       android:hint="DD/MM/YYYY"
                       android:id="@+id/fromdate_leftactive"
                       android:layout_marginLeft="5dp"
                       android:textColor="#000000"
                       android:textSize="14sp"
                       android:background="@drawable/searchbg"
                       android:layout_width="90dp"
                       android:layout_height="30dp"/>
                   <TextView
                       android:textColor="#000000"
                       android:textSize="15sp"
                       android:layout_marginLeft="5dp"
                       android:text="To"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                   <Button
                       android:hint="DD/MM/YYYY"
                       android:id="@+id/todate_leftactive"
                       android:textColor="#000000"
                       android:textSize="14sp"
                       android:layout_marginLeft="5dp"
                       android:background="@drawable/searchbg"
                       android:layout_width="90dp"
                       android:layout_height="30dp"/>
                   <Button
                       android:id="@+id/search_leftactive"
                       android:layout_marginLeft="5dp"
                       android:text="Search"
                       android:textAllCaps="false"
                       android:textColor="#FFFFFF"
                       android:background="#DB1207"
                       android:layout_width="90dp"
                       android:layout_height="30dp"/>
               </LinearLayout>
               <RelativeLayout
                   android:paddingRight="15dp"
                   android:layout_marginTop="20dp"
                   android:layout_gravity="end"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <androidx.appcompat.widget.SearchView
                       android:background="@drawable/searchbg"
                       app:queryHint="Search"
                       android:layout_alignParentRight="true"
                       android:layout_width="200dp"
                       android:layout_height="30dp"
                       />
               </RelativeLayout>
           </LinearLayout>
           <androidx.recyclerview.widget.RecyclerView
               android:layout_marginTop="5dp"
               android:id="@+id/recycler_leftactive"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

           </androidx.recyclerview.widget.RecyclerView>
           <TextView
               android:id="@+id/txtnodata_leftactive"
               android:gravity="center"
               android:textColor="#000000"
               android:textSize="15dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
       </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>