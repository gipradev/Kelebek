<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Genealogy.RegVacant">
    <LinearLayout
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#4a3185">

            <ImageView
                android:id="@+id/back_regvacant"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Registration Form"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">


                <TextView
                    android:text="Personal info "
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#4a3185"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_personalinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#4a3185"
                        app:boxBackgroundColor="#fff"
                        android:focusableInTouchMode="true"
                        android:textColorHint="#4a3185">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/name_regvacant"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#4a3185"
                            android:hint="Name*"
                            android:inputType="text"
                            android:textColor="#4a3185"
                            android:textSize="15dp"
                            android:textStyle="normal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:text="Gender *"
                            android:textStyle="normal"
                            android:textSize="15dp"
                            android:textColor="#4a3185"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#4a3185"
                            android:padding="1dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="12dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">
                            <Spinner
                                android:id="@+id/gender_regvacant"
                                android:textStyle="normal"
                                android:textSize="15dp"
                                android:background="#fff"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:text="Date of Birth *"
                            android:textStyle="normal"
                            android:textSize="15dp"
                            android:textColor="#4a3185"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:gravity="center_vertical"
                            android:id="@+id/dob_regvacant"
                            android:hint="DD/MM/YYYY"
                            android:textStyle="normal"
                            android:textSize="15dp"
                            android:textColor="#000000"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:drawableLeft="@drawable/ic_calendar"
                            android:background="@drawable/whitebg"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"/>

                    </LinearLayout>





                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#4a3185"
                        android:focusableInTouchMode="true"
                        android:textColorHint="#4a3185">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/mobile_regvacant"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#4a3185"
                            android:hint="Mobile *"
                            android:inputType="number"
                            android:textColor="#4a3185"
                            android:textSize="15dp"
                            android:textStyle="normal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#4a3185"
                        android:focusableInTouchMode="true"
                        android:textColorHint="#4a3185">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/email_regvacant"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#4a3185"
                            android:hint="Email *"
                            android:inputType="textEmailAddress"
                            android:textColor="#4a3185"
                            android:textSize="15dp"
                            android:textStyle="normal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="20dp"/>
                </LinearLayout>
                <TextView
                    android:text="Address"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#4a3185"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:drawableLeft="@drawable/ic_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#4a3185"
                        android:focusableInTouchMode="true"
                        android:textColorHint="#4a3185">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/address_regvacant"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#4a3185"
                            android:inputType="textPostalAddress"
                            android:hint="Permanent Address *"
                            android:textColor="#4a3185"
                            android:textSize="15dp"
                            android:textStyle="normal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#4a3185"
                        android:focusableInTouchMode="true"
                        android:textColorHint="#4a3185">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/zipcode_regvacant"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#4a3185"
                            android:hint="Zipcode *"
                            android:inputType="number"
                            android:textColor="#4a3185"
                            android:textSize="15dp"
                            android:textStyle="normal" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal">
                        <TextView
                            android:text="Country* :"
                            android:textStyle="normal"
                            android:textSize="15dp"
                            android:textColor="#4a3185"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#4a3185"
                            android:padding="1dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="12dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">
                            <Spinner
                                android:id="@+id/country_regvacant"
                                android:textStyle="normal"
                                android:textSize="15dp"
                                android:background="#fff"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:text="State * :"
                            android:textStyle="normal"
                            android:textSize="15dp"
                            android:textColor="#4a3185"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#4a3185"
                            android:padding="1dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="12dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">
                            <Spinner
                                android:id="@+id/state_regvacant"
                                android:textStyle="normal"
                                android:textSize="15dp"
                                android:background="#fff"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"/>
                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal">
                        <TextView
                            android:text="District * :"
                            android:textStyle="normal"
                            android:textSize="15dp"
                            android:textColor="#4a3185"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#4a3185"
                            android:padding="1dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="12dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">
                            <Spinner
                                android:id="@+id/district_regvacant"
                                android:textStyle="normal"
                                android:textSize="15dp"
                                android:background="#fff"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="20dp"/>
                </LinearLayout>

                <TextView
                    android:text=" Placement details"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#4a3185"
                    android:drawableLeft="@drawable/ic_recruitment"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:errorEnabled="true"
                        app:errorTextAppearance="@style/ErrorText"
                        android:textColor="#4a3185"
                        android:focusableInTouchMode="true"
                        android:textColorHint="#4a3185">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/upline_regvacant"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:enabled ="false"
                            android:inputType="text"
                            android:backgroundTint="#4a3185"
                            android:hint="Upline Username *"
                            android:textColor="#4a3185"
                            android:textSize="15dp"
                            android:textStyle="normal" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:orientation="horizontal">
                        <TextView
                            android:text="Position of Placement *"
                            android:textStyle="normal"
                            android:textSize="15dp"
                            android:textColor="#4a3185"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#4a3185"
                            android:padding="1dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="12dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">
                            <Spinner
                                android:id="@+id/position_regvacant"
                                android:textStyle="normal"
                                android:textSize="15dp"
                                android:background="#fff"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"/>
                        </LinearLayout>

                    </LinearLayout>



                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#4a3185"
                        android:focusableInTouchMode="true"
                        android:textColorHint="#4a3185">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/sponsorid_regvacant"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#4a3185"
                            android:inputType="text"
                            android:hint="Sponser Username *"
                            android:textColor="#4a3185"
                            android:textSize="15dp"
                            android:textStyle="normal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="20dp"/>
                </LinearLayout>







                <TextView
                    android:text="Login Details"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#4a3185"
                    android:drawableLeft="@drawable/ic_login"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#4a3185"
                        android:focusableInTouchMode="true"
                        android:textColorHint="#4a3185">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/username_regvacant"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#4a3185"
                            android:hint="Username *"
                            android:inputType="text"
                            android:textColor="#4a3185"
                            android:textSize="15dp"
                            android:textStyle="normal" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleDrawable="@drawable/icon_visibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#4a3185"
                        android:focusableInTouchMode="true"
                        android:textColorHint="#4a3185">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/password_regvacant"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#4a3185"
                            android:hint="Password  *"
                            android:textColor="#4a3185"
                            android:inputType="textPassword"
                            android:textSize="15dp"
                            android:textStyle="normal" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleDrawable="@drawable/icon_visibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#4a3185"
                        android:focusableInTouchMode="true"
                        android:textColorHint="#4a3185">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/confirm_password_regvacant"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#4a3185"
                            android:inputType="textPassword"
                            android:hint="Confirm Password*"
                            android:textColor="#4a3185"
                            android:textSize="15dp"
                            android:textStyle="normal" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <View
                        android:layout_width="2dp"
                        android:layout_height="20dp"/>

                </LinearLayout>



                <Button
                    android:id="@+id/regvacant"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:text="Register"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/btn_shape_capsule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


