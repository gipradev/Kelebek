<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context=".ui.RegistrationFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="9dp">
    <TextView
        android:text="Personal info "
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#4a3185"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_personalinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
          <LinearLayout
              android:layout_marginTop="10dp"
              android:layout_marginBottom="20dp"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <com.google.android.material.textfield.TextInputLayout
                  style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:textColor="#4a3185"
                  app:boxBackgroundColor="#fff"
                  android:focusableInTouchMode="true"
                  android:textColorHint="#4a3185">

                  <com.google.android.material.textfield.TextInputEditText
                      android:id="@+id/name_innerreg"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:backgroundTint="#4a3185"
                      android:hint="Name*"
                      android:inputType="text"
                      android:textColor="#4a3185"
                      android:textSize="15dp"
                      android:textStyle="normal" />
              </com.google.android.material.textfield.TextInputLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginTop="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="horizontal">

    <TextView
        android:text="Gender *"
        android:textStyle="normal"
        android:textSize="15dp"
        android:textColor="#4a3185"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4a3185"
        android:padding="1dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <Spinner
            android:id="@+id/gender_innerreg"
            android:textStyle="normal"
            android:textSize="15dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    </LinearLayout>

</LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:layout_marginTop="10dp"
                  android:orientation="horizontal">

              <TextView
                  android:text="Date of Birth *"
                  android:textStyle="normal"
                  android:textSize="15dp"
                  android:textColor="#4a3185"
                  android:paddingLeft="15dp"
                  android:paddingRight="15dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:gravity="center_vertical"
                  android:id="@+id/dob_innerreg"
                  android:hint="DD/MM/YYYY"
                  android:textStyle="normal"
                  android:textSize="15dp"
                  android:textColor="#000000"
                  android:layout_marginTop="5dp"
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="15dp"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:drawableLeft="@drawable/ic_calendar"
                  android:background="@drawable/whitebg"
                  android:layout_width="wrap_content"
                  android:layout_height="40dp"/>

              </LinearLayout>





              <com.google.android.material.textfield.TextInputLayout
                  style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:textColor="#4a3185"
                  android:focusableInTouchMode="true"
                  android:textColorHint="#4a3185">

                  <com.google.android.material.textfield.TextInputEditText
                      android:id="@+id/mobile_innerreg"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:backgroundTint="#4a3185"
                      android:hint="Mobile *"
                      android:inputType="number"
                      android:textColor="#4a3185"
                      android:textSize="15dp"
                      android:textStyle="normal" />
              </com.google.android.material.textfield.TextInputLayout>

              <com.google.android.material.textfield.TextInputLayout
                  style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:textColor="#4a3185"
                  android:focusableInTouchMode="true"
                  android:textColorHint="#4a3185">

                  <com.google.android.material.textfield.TextInputEditText
                      android:id="@+id/email_innerreg"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:backgroundTint="#4a3185"
                      android:hint="Email *"
                      android:inputType="textEmailAddress"
                      android:textColor="#4a3185"
                      android:textSize="15dp"
                      android:textStyle="normal" />
              </com.google.android.material.textfield.TextInputLayout>

              <View
                  android:layout_width="2dp"
                  android:layout_height="20dp"/>
          </LinearLayout>

    <TextView
        android:text="Address"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#4a3185"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:drawableLeft="@drawable/ic_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

          <LinearLayout
              android:layout_marginTop="10dp"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


              <com.google.android.material.textfield.TextInputLayout
                  style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:textColor="#4a3185"
                  android:focusableInTouchMode="true"
                  android:textColorHint="#4a3185">

                  <com.google.android.material.textfield.TextInputEditText
                      android:id="@+id/address_innerreg"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:backgroundTint="#4a3185"
                      android:hint="Permanent Address *"
                      android:textColor="#4a3185"
                      android:inputType="textPostalAddress"
                      android:textSize="15dp"
                      android:textStyle="normal" />
              </com.google.android.material.textfield.TextInputLayout>

              <com.google.android.material.textfield.TextInputLayout
                  style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:textColor="#4a3185"
                  android:focusableInTouchMode="true"
                  android:textColorHint="#4a3185">

                  <com.google.android.material.textfield.TextInputEditText
                      android:id="@+id/zipcode_innerreg"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:backgroundTint="#4a3185"
                      android:hint="Zipcode *"
                      android:inputType="number"
                      android:textColor="#4a3185"
                      android:textSize="15dp"
                      android:textStyle="normal" />
              </com.google.android.material.textfield.TextInputLayout>


              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:layout_marginTop="10dp"
                  android:paddingLeft="15dp"
                  android:paddingRight="15dp"
                  android:orientation="horizontal">
              <TextView
                  android:text="Country* :"
                  android:textStyle="normal"
                  android:textSize="15dp"
                  android:textColor="#4a3185"
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"/>


                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="#4a3185"
                      android:padding="1dp"
                      android:layout_marginLeft="7dp"
                      android:layout_marginRight="12dp"
                      android:gravity="center_vertical"
                      android:orientation="vertical">
                      <Spinner
                          android:id="@+id/country_innerreg"
                          android:textStyle="normal"
                          android:textSize="15dp"
                          android:background="#fff"
                          android:layout_width="match_parent"
                          android:layout_height="40dp"/>
                  </LinearLayout>

              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:layout_marginTop="10dp"
                  android:paddingLeft="15dp"
                  android:paddingRight="15dp"
                  android:orientation="horizontal">

                  <TextView
                  android:text="State * :"
                  android:textStyle="normal"
                  android:textSize="15dp"
                  android:textColor="#4a3185"
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"/>


                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="#4a3185"
                      android:padding="1dp"
                      android:layout_marginLeft="7dp"
                      android:layout_marginRight="12dp"
                      android:gravity="center_vertical"
                      android:orientation="vertical">
                      <Spinner
                          android:id="@+id/state_innerreg"
                          android:textStyle="normal"
                          android:textSize="15dp"
                          android:background="#fff"
                          android:layout_width="match_parent"
                          android:layout_height="40dp"/>
                  </LinearLayout>



              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"
                  android:layout_marginTop="10dp"
                  android:paddingLeft="15dp"
                  android:paddingRight="15dp"
                  android:orientation="horizontal">
              <TextView
                  android:text="District * :"
                  android:textStyle="normal"
                  android:textSize="15dp"
                  android:textColor="#4a3185"
                  android:layout_width="100dp"
                  android:layout_height="wrap_content"/>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="#4a3185"
                      android:padding="1dp"
                      android:layout_marginLeft="7dp"
                      android:layout_marginRight="12dp"
                      android:gravity="center_vertical"
                      android:orientation="vertical">
                      <Spinner
                          android:id="@+id/district_innerreg"
                          android:textStyle="normal"
                          android:textSize="15dp"
                          android:background="#fff"
                          android:layout_width="match_parent"
                          android:layout_height="40dp"/>
                  </LinearLayout>



              </LinearLayout>
              <View
                  android:layout_width="2dp"
                  android:layout_height="20dp"/>
          </LinearLayout>
    <TextView
        android:text=" Placement details"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#4a3185"
        android:drawableLeft="@drawable/ic_recruitment"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#4a3185"
            android:focusableInTouchMode="true"
            android:textColorHint="#4a3185">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/upline_innerreg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#4a3185"
                android:hint="Upline Username *"
                android:inputType="text"
                android:textColor="#4a3185"
                android:textSize="15dp"
                android:textStyle="normal" />
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">
        <TextView
            android:text="Position of Placement *"
            android:textStyle="normal"
            android:textSize="15dp"
            android:textColor="#4a3185"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4a3185"
                android:padding="1dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <Spinner
                    android:id="@+id/position_innerreg"
                    android:textStyle="normal"
                    android:textSize="15dp"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            </LinearLayout>

        </LinearLayout>



        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#4a3185"
            android:focusableInTouchMode="true"
            android:textColorHint="#4a3185">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sponsorid_innerreg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#4a3185"
                android:hint="Sponser Username *"
                android:textColor="#4a3185"
                android:inputType="text"
                android:textSize="15dp"
                android:textStyle="normal" />
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="20dp"/>
    </LinearLayout>

    <TextView
        android:text="Login Details"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#4a3185"
        android:drawableLeft="@drawable/ic_login"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#4a3185"
            android:focusableInTouchMode="true"
            android:textColorHint="#4a3185">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/username_innerreg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#4a3185"
            android:hint="Username *"
            android:inputType="text"
            android:textColor="#4a3185"
            android:textSize="15dp"
            android:textStyle="normal" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/icon_visibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#4a3185"
            android:focusableInTouchMode="true"
            android:textColorHint="#4a3185">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_innerreg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#4a3185"
                android:hint="Password  *"
                android:textColor="#4a3185"
                android:inputType="textPassword"
                android:textSize="15dp"
                android:textStyle="normal" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/icon_visibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#4a3185"
            android:focusableInTouchMode="true"
            android:textColorHint="#4a3185">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirm_password_innerreg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#4a3185"
                android:inputType="textPassword"
                android:hint="Confirm Password*"
                android:textColor="#4a3185"
                android:textSize="15dp"
                android:textStyle="normal" />

        </com.google.android.material.textfield.TextInputLayout>


        <View
            android:layout_width="2dp"
            android:layout_height="20dp"/>

          </LinearLayout>

    <Button
        android:id="@+id/innerregister"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_gravity="end"
        android:gravity="center"
        android:text="Submit"
        android:layout_marginRight="12dp"
        android:background="@drawable/btn_shape_capsule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
</ScrollView>