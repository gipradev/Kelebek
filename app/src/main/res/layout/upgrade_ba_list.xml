<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/rl_upgrade"
    android:layout_height="match_parent">
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:background="@drawable/round_bg"
                   android:layout_marginTop="10dp"
                   android:gravity="center"
                   android:id="@+id/upgrade_slno"
                   android:text="Slno"
                   android:textColor="#FFFFFF"
                   android:textSize="15dp"
                   android:textStyle="bold"
                   android:layout_width="25dp"
                   android:layout_height="25dp"/>
           </LinearLayout>
           <LinearLayout
               android:layout_marginLeft="10dp"
               android:orientation="vertical"
               android:layout_marginTop="5dp"
               android:gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:textStyle="bold"
                   android:layout_marginTop="10dp"
                   android:layout_gravity="center_vertical"
                   android:text="Userid"
                   android:textColor="#000000"
                   android:textSize="15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:textStyle="bold"
                   android:layout_marginTop="10dp"
                   android:layout_gravity="center_vertical"
                   android:text="Name"
                   android:textColor="#000000"
                   android:textSize="15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:textStyle="bold"
                   android:layout_marginTop="10dp"
                   android:layout_gravity="center_vertical"
                   android:text="Date Of Joining"
                   android:textColor="#000000"
                   android:textSize="15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:textStyle="bold"
                   android:layout_marginTop="10dp"
                   android:layout_gravity="center_vertical"
                   android:text="Registration Type"
                   android:textColor="#000000"
                   android:textSize="15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:textStyle="bold"
                   android:layout_marginTop="10dp"
                   android:layout_gravity="center_vertical"
                   android:text="Status"
                   android:textColor="#000000"
                   android:textSize="15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
           <LinearLayout
               android:layout_marginLeft="5dp"
               android:orientation="vertical"
               android:layout_marginTop="5dp"
               android:gravity="center_horizontal"
               android:layout_width="10dp"
               android:layout_height="wrap_content">

               <TextView
                   android:textStyle="bold"
                   android:layout_marginTop="10dp"
                   android:layout_gravity="center_vertical"
                   android:text=":"
                   android:textColor="#000000"
                   android:textSize="15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:textStyle="bold"
                   android:layout_marginTop="10dp"
                   android:layout_gravity="center_vertical"
                   android:text=":"
                   android:textColor="#000000"
                   android:textSize="15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:textStyle="bold"
                   android:layout_marginTop="10dp"
                   android:layout_gravity="center_vertical"
                   android:text=":"
                   android:textColor="#000000"
                   android:textSize="15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:textStyle="bold"
                   android:layout_marginTop="10dp"
                   android:layout_gravity="center_vertical"
                   android:text=":"
                   android:textColor="#000000"
                   android:textSize="15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:layout_marginTop="10dp"
                   android:text=":"
                   android:textColor="#000000"
                   android:textSize="15dp"
                   android:textStyle="bold" />
           </LinearLayout>
           <LinearLayout

               android:orientation="vertical"
               android:layout_marginTop="5dp"
               android:gravity="center_horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_marginTop="10dp"
                   android:layout_gravity="center_vertical"
                   android:id="@+id/upgrade_userid"
                   android:text="Userid"
                   android:textColor="#000000"
                   android:textSize="15dp"

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:layout_marginTop="10dp"
                   android:layout_gravity="center_vertical"
                   android:id="@+id/upgrade_name"
                   android:text="Name"
                   android:textColor="#000000"
                   android:textSize="15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:layout_marginTop="10dp"
                   android:layout_gravity="center_vertical"
                   android:id="@+id/upgrade_djoing"
                   android:text="Date Of Joining"
                   android:textColor="#000000"
                   android:textSize="15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:layout_marginTop="10dp"
                   android:layout_gravity="center_vertical"
                   android:id="@+id/upgrade_regtype"
                   android:text="Registration Type"
                   android:textColor="#000000"
                   android:textSize="15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:layout_marginTop="10dp"
                   android:gravity="center"
                   android:layout_gravity="center_vertical"
                   android:id="@+id/upgrade_status"
                   android:text="On Hold"
                   android:textStyle="bold"
                   android:background="@drawable/bluebg"
                   android:textColor="#FFFFFF"
                   android:textSize="15dp"
                   android:layout_width="80dp"
                   android:layout_height="25dp"/>
               <TextView

                   android:layout_gravity="center_vertical"
                   android:gravity="center"
                   android:layout_marginTop="20dp"
                   android:background="@drawable/redbg"
                   android:id="@+id/upgrade_ba"
                   android:text="Upgrade to BA"
                   android:textColor="#FFFFFF"
                   android:textStyle="bold"
                   android:textSize="20dp"
                   android:layout_width="170dp"
                   android:layout_height="30dp"/>
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:background="@drawable/horizontal_line"
           android:layout_width="match_parent"
           android:layout_height="30dp">
       </LinearLayout>
   </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_upline"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/layout_upgrade"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <TextView
            android:layout_marginLeft="25dp"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:text="Assign Upline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:text="fhjgfhjgfh"
            android:gravity="center"
            android:id="@+id/view_upline"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/blackbuttonbg"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>
        <Button
            android:id="@+id/upline_submit"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="Sumbit"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:layout_width="90dp"
            android:layout_height="30dp"/>
        <Button
            android:id="@+id/close_upline"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="end"
            android:text="Close"
            android:layout_width="90dp"
            android:layout_height="40dp"/>

    </LinearLayout>


</RelativeLayout>
