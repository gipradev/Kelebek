                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4a3185"
                android:padding="1dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/reg_district"
                    android:textStyle="normal"
                    android:textSize="15dp"
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/zipcodeinputlayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#4a3185"
                app:counterEnabled="true"
                app:counterMaxLength="6"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/error_appearance"
                android:textColorHint="#4a3185">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#4a3185"
                    android:inputType="number"
                    android:hint="Zipcode *"
                    android:textColor="#4a3185"
                    android:textSize="15dp"
                    android:textStyle="normal" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/mobileinputlayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#4a3185"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/error_appearance"
                android:textColorHint="#4a3185">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#4a3185"
                    android:inputType="number"
                    android:hint="Mobile *"
                    android:textColor="#4a3185"
                    android:textSize="15dp"
                    android:textStyle="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailinputlayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#4a3185"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/error_appearance"
                android:textColorHint="#4a3185">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#4a3185"
                    android:inputType="textEmailAddress"
                    android:hint="Email *"
                    android:textColor="#4a3185"
                    android:textSize="15dp"
                    android:textStyle="normal" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/usernameinputlayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#4a3185"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/error_appearance"
                android:textColorHint="#4a3185">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#4a3185"
                    android:inputType="text"
                    android:hint="Username"
                    android:textColor="#4a3185"
                    android:textSize="15dp"
                    android:textStyle="normal" />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordinputlayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:passwordToggleEnabled="true"
                app:passwordToggleDrawable="@drawable/icon_visibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#4a3185"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/error_appearance"
                android:textColorHint="#4a3185">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#4a3185"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:textColor="#4a3185"
                    android:textSize="15dp"
                    android:textStyle="normal" />
            </com.google.android.material.textfield.TextInputLayout>





            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confrimpassinputlayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:passwordToggleEnabled="true"
                app:passwordToggleDrawable="@drawable/icon_visibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#4a3185"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/error_appearance"
                android:textColorHint="#4a3185">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reg_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#4a3185"
                    android:inputType="textPassword"
                    android:hint="Confirm Password"
                    android:textColor="#4a3185"
                    android:textSize="15dp"
                    android:textStyle="normal" />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/signup"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="Register"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_marginRight="14dp"
                android:background="@drawable/btn_shape_capsule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


    </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>