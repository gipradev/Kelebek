<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="9dp">
          <LinearLayout
              android:gravity="center_horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

                  <TextView
                      android:layout_gravity="center_vertical"
                      android:id="@+id/getpdt_count"
                      android:text="No#"
                      android:textColor="#000000"
                      android:textSize="11dp"
                      android:layout_width="wrap_content"
                      android:layout_weight="0.3"
                      android:layout_height="wrap_content"/>



                 <TextView
                     android:layout_gravity="center_vertical"
                     android:id="@+id/getpdt_product"
                     android:text="pdtname"
                     android:textColor="#000000"
                     android:textSize="11dp"
                     android:layout_marginLeft="10dp"
                     android:layout_width="0dp"
                     android:layout_weight="1.5"
                     android:layout_height="wrap_content"/>


              <TextView
                  android:layout_gravity="center_vertical"
                  android:id="@+id/getpdt_rate"
                  android:text="pdt price"
                  android:textColor="#000000"
                  android:textSize="11dp"
                  android:layout_marginLeft="10dp"
                  android:layout_width="0dp"
                  android:layout_weight="1.5"
                  android:layout_height="wrap_content"/>


              <TextView
                  android:layout_gravity="center_vertical"
                  android:id="@+id/getpdt_quantity"
                  android:text="qty"
                  android:textColor="#000000"
                  android:textSize="11dp"
                  android:layout_marginLeft="10dp"
                  android:layout_width="0dp"
                  android:layout_weight="1.5"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:layout_gravity="center_vertical"
                  android:id="@+id/getpdt_totalamount"
                  android:text="total amount"
                  android:textColor="#000000"
                  android:textSize="11dp"
                  android:layout_marginLeft="10dp"
                  android:layout_width="0dp"
                  android:layout_weight="1.5"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:layout_gravity="center_vertical"
                  android:id="@+id/getpdt_totalbv"
                  android:text="totalbv"
                  android:textColor="#000000"
                  android:textSize="11dp"
                  android:layout_marginLeft="10dp"
                  android:layout_width="0dp"
                  android:layout_weight="1.5"
                  android:layout_height="wrap_content"/>

          </LinearLayout>


      </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>